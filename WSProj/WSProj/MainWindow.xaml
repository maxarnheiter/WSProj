<Window x:Class="WSProj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSProj"
        mc:Ignorable="d"
        Title="MainWindow" Height="380.403" Width="811" Closing="Window_Closing">
    <Grid>
        <ComboBox x:Name="ComPortComboBox" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="BaudRateComboBox" HorizontalAlignment="Left" Margin="144,26,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="ComPortLabel" Content="Com Ports:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="BaudRateLabel" Content="Baud Rate:" HorizontalAlignment="Left" Margin="144,0,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="ParityComboBox" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="ParityLabel" Content="Parity Bits:" HorizontalAlignment="Left" Margin="11,48,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="DebuggingTextBox" HorizontalAlignment="Left" Height="122" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="353" VerticalScrollBarVisibility="Auto" Margin="10,219,0,0"/>
        <ComboBox x:Name="DataBitsComboBox" HorizontalAlignment="Left" Margin="145,74,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="DataBitsLabel" Content="Data Bits:" HorizontalAlignment="Left" Margin="145,48,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="StopBitsComboBox" HorizontalAlignment="Left" Margin="284,74,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="StopBitsLabel" Content="Stop Bits:" HorizontalAlignment="Left" Margin="284,48,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.549,-0.139" Height="35" Click="ConnectButton_Click"/>
        <Button x:Name="TestButton" Content="Test" HorizontalAlignment="Left" Margin="144,146,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.157,0.827" Height="35" Click="TestButton_Click"/>
        <TextBox x:Name="WeightTextBox" HorizontalAlignment="Left" Height="54" Margin="535,10,0,0" TextWrapping="Wrap" Text="0.0 LB" VerticalAlignment="Top" Width="258" FontSize="48" FontFamily="Digital-7" />
        <TextBox x:Name="WeighEventsTextBox" HorizontalAlignment="Left" Height="121" Margin="377,219,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="416"/>

    </Grid>
</Window>
