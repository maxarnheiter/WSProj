        <Label x:Name="BaudRateLabel" Content="Baud Rate:" HorizontalAlignment="Left" Margin="144,0,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="ParityComboBox" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="ParityLabel" Content="Parity Bits:" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="DebuggingTextBox" HorizontalAlignment="Left" Height="122" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="497" VerticalScrollBarVisibility="Auto" Margin="10,188,0,0"/>

    </Grid>
</Window>
